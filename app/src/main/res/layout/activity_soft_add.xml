<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingTop="40dp"
    android:paddingRight="30dp"
    android:background="@drawable/background"
    tools:context=".SoftAdd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soft Asset"
        android:textSize="40sp"
        android:textColor="@color/white"/>




    <EditText
        android:id="@+id/editTextSerialNo"
        android:layout_marginTop="130dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Serial No"
        android:textColor="@color/black" />


    <EditText
        android:id="@+id/editTextSoftware"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSerialNo"

        android:textColor="@color/black"
        android:hint="Software" />

    <EditText
        android:id="@+id/editTextProductKey"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSoftware"
        android:hint="Product Key"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTextRDate"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextProductKey"
        android:hint="Renewal Date"

        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTextWarranty"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextRDate"
        android:hint="Warranty"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTextPDate"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextWarranty"
        android:hint="Purchased Date"

        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTextPDetails"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPDate"
        android:hint="Purchased Details"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/editTextPDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Add"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:targetApi="lollipop" />

</RelativeLayout>